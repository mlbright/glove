<%= form_with model: @schedule, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :name, class: "block text-sm font-medium" %>
    <%= form.text_field :name, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2" %>
  </div>
  <div>
    <%= form.label :account_id, "Account", class: "block text-sm font-medium" %>
    <%= form.select :account_id, [["None", nil]] + @accounts.map { |a| [a.name, a.id] }, {}, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2" %>
  </div>
  <div class="grid gap-4 md:grid-cols-3">
    <div>
      <%= form.label :frequency, class: "block text-sm font-medium" %>
      <%= form.select :frequency, Schedule.frequencies.keys.map { |freq| [freq.humanize, freq] }, {}, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2" %>
    </div>
    <div>
      <%= form.label :interval_value, "Every", class: "block text-sm font-medium" %>
      <%= form.number_field :interval_value, min: 1, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2" %>
    </div>
    <div>
      <%= form.label :next_occurs_on, class: "block text-sm font-medium" %>
      <%= form.date_field :next_occurs_on, class: "mt-1 w-full rounded border border-slate-300 px-3 py-2" %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <%= form.check_box :active %>
    <%= form.label :active, "Active" %>
  </div>
  <div>
    <%= form.submit class: "rounded bg-emerald-600 px-4 py-2 text-white" %>
  </div>
<% end %>
