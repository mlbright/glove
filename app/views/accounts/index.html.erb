<div class="flex items-center justify-between">
  <h1 class="text-2xl font-semibold text-slate-900">Accounts</h1>
  <%= link_to "New account", new_account_path, class: "rounded bg-emerald-600 px-4 py-2 text-white" %>
</div>

<table class="mt-6 w-full text-left text-sm">
  <thead>
    <tr class="text-slate-500">
      <th class="py-2">Name</th>
      <th class="py-2 text-right">Balance</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr class="border-t border-slate-100 <%= 'opacity-50' if account.archived_at? %>">
        <td class="py-3 font-medium text-slate-800">
          <%= account.name %>
          <% if account.archived_at? %>
            <span class="ml-2 rounded bg-slate-200 px-2 py-0.5 text-xs text-slate-600">Archived</span>
          <% end %>
        </td>
        <td class="py-3 text-right font-semibold <%= account.balance >= Money.new(0) ? "text-emerald-600" : "text-rose-500" %>"><%= humanized_money_with_symbol(account.balance) %></td>
        <td class="py-3 text-right">
          <%= link_to "View", account_path(account), class: "text-emerald-600" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
