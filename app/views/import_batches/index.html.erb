<div class="flex items-center justify-between">
  <h1 class="text-2xl font-semibold text-slate-900">Import Batches</h1>
  <%= link_to "New import", new_import_batch_path, class: "rounded bg-emerald-600 px-4 py-2 text-white" %>
</div>

<table class="mt-6 w-full text-left text-sm">
  <thead>
    <tr class="text-slate-500">
      <th class="py-2">Template</th>
      <th class="py-2">Status</th>
      <th class="py-2">Processed</th>
      <th class="py-2">Failed</th>
      <th class="py-2">Finished</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @import_batches.each do |batch| %>
      <tr class="border-t border-slate-100">
        <td class="py-3"><%= batch.import_template.name %></td>
        <td class="py-3"><%= batch.status.humanize %></td>
        <td class="py-3"><%= batch.processed_count %></td>
        <td class="py-3"><%= batch.failed_count %></td>
        <td class="py-3"><%= batch.finished_at&.to_s(:long) || "â€”" %></td>
        <td class="py-3 text-right"><%= link_to "View", batch, class: "text-emerald-600" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
