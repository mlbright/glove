<div class="flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-semibold text-slate-900">Edit Tag</h1>
    <p class="mt-2 text-sm text-slate-600">Update the tag name. The slug will remain unchanged.</p>
  </div>
</div>

<div class="mt-6 max-w-lg rounded bg-white p-6 shadow">
  <%= form_with model: @tag, class: "space-y-4" do |form| %>
    <% if @tag.errors.any? %>
      <div class="rounded bg-rose-50 p-4 text-sm text-rose-600">
        <p class="font-medium">Please fix the following errors:</p>
        <ul class="mt-2 list-inside list-disc">
          <% @tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-slate-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded border border-slate-300 px-3 py-2 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-1 focus:ring-emerald-500" %>
    </div>

    <div>
      <p class="block text-sm font-medium text-slate-700">Slug</p>
      <p class="mt-1 text-sm text-slate-500"><%= @tag.slug %></p>
    </div>

    <div class="flex items-center gap-4 pt-2">
      <%= form.submit "Update Tag", class: "rounded bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 cursor-pointer" %>
      <%= link_to "Cancel", tags_path, class: "text-sm text-slate-600 hover:text-slate-800" %>
    </div>
  <% end %>
</div>
